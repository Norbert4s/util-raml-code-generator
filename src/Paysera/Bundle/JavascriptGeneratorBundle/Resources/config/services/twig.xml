<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="paysera_javascript_generator.twig_extension.api_method"
                 class="Paysera\Bundle\JavascriptGeneratorBundle\Twig\ApiMethodExtension">
            <argument type="service" id="paysera_php_generator.string_converter"/>
            <argument type="service" id="paysera_javascript_generator.service.name_resolver"/>
            <argument type="service" id="paysera_code_generator.method_name_builder"/>
            <argument type="service" id="paysera_code_generator.resource_type_detector"/>

            <tag name="twig.extension"/>
        </service>

        <service id="paysera_javascript_generator.twig_extension.field_definition"
                 class="Paysera\Bundle\JavascriptGeneratorBundle\Twig\FieldDefinitionExtension">
            <argument type="service" id="paysera_php_generator.string_converter"/>
            <tag name="twig.extension"/>
        </service>
    </services>
</container>
